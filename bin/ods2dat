#!/usr/bin/env python3
import h5py
import numpy as np
import tabulator
import sys


def main():
    nam = sys.argv[1]
    if nam.endswith('.ods'):
        nam = nam[:-4]
    f = h5py.File(nam + '.dat', 'w')
    xy = []
    with tabulator.Stream(sys.argv[1], sheet=1, headers=1) as stream:
        for row in stream:
            if row[0] is None:
                break
            xy.append((row[0], row[1]))
    f.create_dataset('PROFILE', data=np.array(xy))
    with tabulator.Stream(sys.argv[1], sheet=2, headers=3) as stream:
        keys_0 = stream.headers[1:17]
        keys_1 = stream.headers[17:19]
        for row in stream:
            if row[0] is None:
                break
            g = f.create_group('LAYER/' + row[0].upper())
            for i, key in enumerate(keys_0):
                val = row[i + 1]
                if val is not None:
                    g.attrs[key] = val
            arr = np.array(
                [[0.002, row[18]], [0.0063, row[19]], [0.02, row[20]],
                 [0.063, row[21]], [0.2, row[22]], [0.63, row[23]], [
                     2.0, row[24]
                 ], [6.3, row[25]], [20.0, row[26]], [63.0, row[27]],
                 [200.0, row[28]], [630.0, row[29]], [2000.0, row[30]]])
            dset = g.create_dataset('GRANULOMETRY', data=np.cumsum(arr, axis=1))
            for i, key in enumerate(keys_1):
                val = row[i + 17]
                if val is not None:
                    print(key, val)
                    dset.attrs[key] = val
    f.close()
    return 0


if __name__ == '__main__':
    sys.exit(main())
